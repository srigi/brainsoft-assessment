{
  "name": "api",
  "scripts": {
    "dev": "ts-node-dev ./src/server.ts",
    "db:migrations:generate": "drizzle-kit generate:pg",
    "db:migrations:push": "ts-node ./cli/db-migrate.ts",
    "db:seed": "ts-node ./cli/db-seed.ts",
    "graphql:nexus:generate": "ts-node ./src/schema",
    "lint": "eslint 'src/**/*.{js,json,ts}'",
    "tsc": "tsc -noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.26",
    "fastify": "~4.17",
    "graphql": "~16.6",
    "mercurius": "~13.0",
    "postgres": "~3.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "drizzle-kit": "^0.18",
    "nexus": "~1.3",
    "ts-node": "~10.9",
    "ts-node-dev": "~2.0"
  }
}
